    "@electron-forge/publisher-github": "^7.10.2",
    "@electron-forge/maker-squirrel": "^6.2.1",
    "electron": "^31.7.7",
    "electron-vite": "^2.3.0",
    "vite": "^5.3.3"
  },
  "build": {
    "appId": "com.wallpaper.desktop",
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release"
    }
  }
}