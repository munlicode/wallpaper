{
  "name": "wallpaper-tool-monorepo",
  "private": true,
  "version": "1.0.0",
  "description": "Desktop and CLI wallpaper tool",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "tsc --build",
    "dev:cli": "pnpm --filter @wallpaper/cli dev",
    "dev:desktop": "pnpm --filter @wallpaper/desktop-app dev",
    "test": "NODE_OPTIONS=--experimental-vm-modules pnpm jest",
    "clean": "rimraf packages/*/dist packages/*/tsconfig.tsbuildinfo"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.19.24",
    "@types/wallpaper": "^2.5.1",
    "@types/yargs": "^17.0.34",
    "electron-vite": "^2.3.0",
    "jest": "^30.2.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.5",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "lowdb": "^7.0.1",
    "sharp": "^0.34.4",
    "wallpaper": "^7.2.1"
  }
}